<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_circle_primary" />

    <EditText
        android:id="@+id/content_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_16"
        android:layout_weight="1"
        android:autofillHints="content item"
        android:fontFamily="@font/signika_light"
        android:inputType="text"
        android:paddingVertical="0dp"
        android:textColor="@color/colorDark"
        android:textSize="16sp"
        tools:ignore="LabelFor"
        tools:text="new item" />

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="0dp"
        android:background="@drawable/rounded_rectangle_sm"
        android:backgroundTint="@color/colorPrimary"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_close" />
</LinearLayout>